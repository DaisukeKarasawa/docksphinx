# docksphinxd configuration example

grpc_address: "127.0.0.1:50051"
pid_file: "/tmp/docksphinxd.pid"
log_level: "info"
event_history_max: 1000

monitor:
  interval: 5s
  container_name_pattern: ""
  image_name_pattern: ""
  thresholds:
    cpu:
      warning: 70
      critical: 90
      consecutive_count: 3
    memory:
      warning: 80
      critical: 95
      consecutive_count: 3
